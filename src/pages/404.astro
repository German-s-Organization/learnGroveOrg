---
import Layout from '../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout>
	<h1>{t('pageTitles.page404')}</h1>
    <h2>{t('messages.error404')}</h2>
    <div>
        <form>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" formaction=`/${lang}`>{t('buttons.returnHome')}</button>
        </form>
    </div>
</Layout>
