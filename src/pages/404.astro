---
import Layout from '../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout>
    <div class="flex-col place-content-center m-8 font-bold">
	    <h1 class="text-5xl text-center m-4">{t('pageTitles.page404')}</h1>
        <h2 class="text-3xl text-center m-2">{t('messages.error404')}</h2>
        <div class="text-center">
            <form>
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" formaction=`/${lang}`>{t('buttons.returnHome')}</button>
            </form>
        </div>
    </div>
</Layout>
